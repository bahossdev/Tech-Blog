<div class="text-left blog">
  <h2>{{title}}</h2>
  <p>{{description}}</p>
  <p class="text-right author">Created by {{user.name}} on {{format_date date_created}}</p>
  
  {{#if logged_in}}
  <form class="form comment-form">
    <div class="form-group">
      <label for="comment">Your Comment:</label>
      <textarea class="form-input" id="comment" name="comment"></textarea>
    </div>
    <div class="form-group">
      <button class="btn btn-primary comment">Comment on this post!</button>
    </div>
  </form>
  {{/if}}
</div>
<div class="comment-card">
  <h4>Comments</h4>
  
  {{#unless logged_in}}
  <p>Please login or sign-up to leave a comment:</p>
  <a href="/login"><button class="btn btn-primary cta-button" type="submit">Login or Sign-up</button></a>
  {{/unless}}

  {{#each comments as |comment|}}
  <p id="comments">{{comment.comment}} </p>
  <p class="text-right author"> Commented by {{comment.user.name}} on {{format_date comment.date_created}}</p>
  {{/each}}
</div>
<script src="/js/blog.js"></script>